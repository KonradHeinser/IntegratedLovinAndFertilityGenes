<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationAdd" MayRequire="LibidoGenes.Mod">
                <xpath>/Defs/XenotypeDef[defName="VRE_Poluxkin"]/genes</xpath>
                <value>
                    <li>Libido_VeryLow</li>
                </value>
            </li>

            <li Class="PatchOperationFindMod" MayRequire="LibidoGenes.Mod">
		        <mods>
			        <li>Royalty</li>
		        </mods>
                <match Class="PatchOperationSequence">
		            <operations>
                        <li Class="PatchOperationAdd" MayRequire="LibidoGenes.Mod">
                            <xpath>/Defs/XenotypeDef[defName="VRE_Animakin"]/genes</xpath>
                            <value>
                                <li>Libido_VeryLow</li>
                            </value>
                        </li>
                    </operations>
                </match>
            </li>

            <li Class="PatchOperationFindMod" MayRequire="LibidoGenes.Mod">
		        <mods>
			        <li>Ideology</li>
		        </mods>
                <match Class="PatchOperationSequence">
		            <operations>
                        <li Class="PatchOperationAdd" MayRequire="LibidoGenes.Mod">
                            <xpath>/Defs/XenotypeDef[defName="VRE_Gauranlenkin"]/genes</xpath>
                            <value>
                                <li>Libido_VeryLow</li>
                            </value>
                        </li>
                    </operations>
                </match>
            </li>
        </operations>
    </Operation>
</Patch>
